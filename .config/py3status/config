# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 1
}

order += "lrcshowrs"
#order += "keyboard_locks"
#order += "wireless _first_"
#order += "ethernet _first_"
order += "net_rate"
#order += "battery all"
order += "battery_level"
order += "volume_status out"
order += "volume_status in"
#order += "volume out"
#order += "volume in"
#order += "diskdata"
order += "sysdata"
order += "disk /"
#order += "tztime tokyo"
order += "tztime local"

lrcshowrs {
    min_length = 80
}


keyboard_locks {
    format = '[\?if=caps_lock&color=bad CAPS|\?color=#fff CAPS] '
}

wireless _first_ {
    format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip"
    format_down = "E: down"
}

battery all {
    format = "%status %percentage %remaining"
}

tztime local {
    format = "%a %Y-%m-%d %H:%M:%S"
}

tztime tokyo {
    format = "Tyo:%H:%M"
    timezone = "Asia/Tokyo"
}

load {
    format = "%1min"
}

disk "/" {
    format = "/ free %avail"
}

