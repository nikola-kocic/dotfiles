    #device = "pulse:alsa_output.pci-0000_00_1b.0.analog-stereo"
    format = "ðŸ”Š %volume"
    format_muted = "ðŸ”ˆ ---"
    mixer = "Master"
}

volume in {
    format = "ðŸŽ¤ %volume"
    format_muted = "ðŸŽ¤ ---"
    mixer = "Capture"
}

volume_status out {
    cache_timeout = 5
    device = "alsa_output.usb-Yamaha_Corporation_Steinberg_UR22mkII-00.iec958-stereo"
    format = "ðŸ”Š [\?min_length=3 {percentage}]"
    format_muted = "ðŸ”ˆ ---"
    command = "pamixer"
}

volume_status in {
    cache_timeout = 5
    is_input = 1
    device = "echoCancel_source"
    format = "ðŸŽ¤ [\?min_length=3 {percentage}]"
    format_muted = "ðŸŽ¤ ---"
    command = "pamixer"
}

net_rate {
    format = "{down}â–¼{up}â–²"
    #format = "{interface}:{down}â–¼{up}â–²"
    format_value = "[\?min_length=6 {value:.0f}{unit}]"
    unit = "K"
}

sysdata {
    cache_timeout = 1
    format = "[\?color=cpu_used_percent CPU [\?min_length=3 {cpu_used_percent:.0f}]%]\,[\?color=cpu_temp [\?min_length=3 {cpu_temp:.0f}]Â°C]\| [\?color=mem_used_percent RAM [\?min_length=3 {mem_used_percent:.0f}]%]"
    thresholds = [(0, "#fff"), (70, "degraded"), (90, "bad")]
}

diskdata {
    cache_timeout = 1
    format = "R {read} \| W {write}"
}

battery_level {
    format = "{icon} {percent}"
    notify_low_level = True
}
