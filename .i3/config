set $w1  1:www
set $w2  2:comm
set $w3  3:geany
set $w4  4:term
set $w5  5
set $w6  6
set $w7  7
set $w8  8:term-rem
set $w9  9:git
set $w10 10:ide

# Workspaces for first screen
workspace $w1  output DVI-I-0
workspace $w2  output DVI-I-0
workspace $w3  output DVI-I-0
workspace $w4  output DVI-I-0
workspace $w5  output DVI-I-0
# Workspaces for second screen
workspace $w9  output DVI-I-1
workspace $w6  output DVI-I-1
workspace $w7  output DVI-I-1
workspace $w8  output DVI-I-1
workspace $w10 output DVI-I-1

# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w10

# move focused container to workspace
bindsym $mod+Shift+exclam      move workspace $w1
bindsym $mod+Shift+at          move workspace $w2
bindsym $mod+Shift+numbersign  move workspace $w3
bindsym $mod+Shift+dollar      move workspace $w4
bindsym $mod+Shift+percent     move workspace $w5
bindsym $mod+Shift+asciicircum move workspace $w6
bindsym $mod+Shift+ampersand   move workspace $w7
bindsym $mod+Shift+asterisk    move workspace $w8
bindsym $mod+Shift+parenleft   move workspace $w9
bindsym $mod+Shift+parenright  move workspace $w10

assign [class="Firefox"]     $w1
assign [class="Thunderbird"] $w2
assign [class="Pidgin"]      $w2
assign [class="Skype"]       $w2
assign [class="Geany"]       $w3
assign [class="git-gui"]     $w9
assign [class="gitg"]        $w9
assign [class="Eclipse"]     $w10

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+x  exec xfce4-appfinder
bindsym Mod1+F2 exec xfce4-appfinder
for_window [instance="^xfce4-appfinder$"] floating enable
for_window [instance="^xfce4-notifyd$"]   floating enable
